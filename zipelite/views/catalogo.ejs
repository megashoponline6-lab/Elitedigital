<% var title = 'Catálogo'; %>

<section class="container">
  <h2 class="mb-4 text-danger fw-bold">Catálogo</h2>

  <div class="row g-3">
    <% if (productos.length === 0) { %>
      <div class="col-12 text-center text-secondary">
        <p>No hay productos disponibles por el momento.</p>
      </div>
    <% } %>

    <% productos.forEach(p => { %>
      <div class="col-6 col-md-4 col-lg-3">
        <a href="/comprar/<%= p.id %>" class="text-decoration-none">
          <div class="card h-100 bg-black border border-secondary rounded-4 text-center p-3 hover-shadow-sm">
            <% if (p.logo) { %>
              <img src="<%= p.logo %>" alt="<%= p.nombre %>" class="img-fluid mb-3" style="max-height: 60px; object-fit: contain;">
            <% } else { %>
              <div class="bg-secondary rounded py-4 mb-3"></div>
            <% } %>
            <h6 class="text-light fw-semibold"><%= p.nombre %></h6>
          </div>
        </a>
      </div>
    <% }) %>
  </div>
</section>
