<% var title = 'Comprar'; %>

<h2 class="fw-bold mb-4 text-danger">
  <i class="bi bi-bag-fill me-2"></i>Comprar <%= producto.nombre %>
</h2>

<div class="card bg-black border-secondary rounded-4 shadow-lg p-4">
  <div class="row g-4 align-items-center">
    <div class="col-md-3 text-center">
      <img src="<%= producto.logo ? '/public/brand/' + producto.logo : '/public/img/default.png' %>" 
           class="img-fluid rounded-3" style="max-height:120px;">
    </div>
    <div class="col-md-9">
      <h4 class="fw-bold text-light"><%= producto.nombre %></h4>
      <p class="text-secondary small mb-1">Categor√≠a: <%= producto.etiqueta %></p>
      <p class="fs-5 text-success fw-bold mb-3">Precio: $<%= producto.precio %> MXN</p>

      <form method="post" action="/comprar/<%= producto.id %>" class="d-flex gap-3">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit" class="btn btn-danger px-4">
          <i class="bi bi-cart-check me-1"></i>Confirmar compra
        </button>
        <a href="/catalogo" class="btn btn-outline-light">Cancelar</a>
      </form>
    </div>
  </div>
</div>
