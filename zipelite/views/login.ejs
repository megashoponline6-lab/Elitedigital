<% var title = 'Iniciar sesión'; %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h2 class="fw-bold text-danger">Acceso de Clientes</h2>
</div>

<!-- 🔔 Mensajes de error -->
<% if (errores && errores.length) { %>
  <div class="alert alert-danger">
    <% errores.forEach(e => { %>
      <div><%= e.msg %></div>
    <% }) %>
  </div>
<% } %>

<div class="card bg-black border border-secondary rounded-4 shadow-lg p-4 mt-3">
  <!-- ⚙️ FORMULARIO CORRECTO PARA CLIENTES -->
  <form method="post" action="/login">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

    <div class="mb-3">
      <label class="form-label text-light">Correo electrónico</label>
      <input 
        type="email"
        name="correo"
        class="form-control bg-dark text-light border-secondary"
        placeholder="ejemplo@correo.com"
        required>
    </div>

    <div class="mb-3">
      <label class="form-label text-light">Contraseña</label>
      <input 
        type="password"
        name="password"
        class="form-control bg-dark text-light border-secondary"
        placeholder="********"
        required>
    </div>

    <button class="btn btn-danger w-100 mt-2 py-2">Iniciar sesión</button>
  </form>
</div>

<p class="text-secondary small mt-3 text-center">
  ¿No tienes cuenta?
  <a href="/registro" class="text-danger text-decoration-none">Regístrate aquí</a>.
</p>
