<% layout = 'layout' %>
<% var title = 'Inicio'; %>

<div class="row align-items-center">
  <div class="col-lg-6">
    <h1 class="display-5 fw-bold">Todo tu entretenimiento en un solo lugar.</h1>
    <p class="lead text-secondary">Series, películas y música con planes flexibles.</p>
    <div class="btn-group mb-3">
      <a class="btn btn-danger" href="/catalogo">Ver catálogo</a>
      <a class="btn btn-outline-danger" href="/admin">Admin</a>
    </div>
    <div class="mb-2">
      <% if (etiquetas && etiquetas.length) { %>
        <div class="btn-group flex-wrap">
          <a class="btn btn-sm <%= !filtro ? 'btn-light' : 'btn-outline-light' %>" href="/">Todos</a>
          <% etiquetas.forEach(e => { %>
            <a class="btn btn-sm <%= filtro === e.etiqueta ? 'btn-light' : 'btn-outline-light' %>" href="/?f=<%= e.etiqueta %>"><%= e.etiqueta %></a>
          <% }) %>
        </div>
      <% } %>
    </div>
  </div>

  <div class="col-lg-6 text-center mt-4 mt-lg-0">
    <!-- ✅ Hero image corregida: sin /public -->
    <img src="/img/Imagen de WhatsApp 2025-10-17 a las 06.34.41_362da0e6.jpg"
         class="img-fluid rounded-4 shadow-lg"
         alt="Hero">
  </div>
</div>

<hr>

<div class="row g-3">
  <% productos.forEach(p => { %>
    <div class="col-6 col-md-4 col-lg-3">
      <div class="card h-100 bg-black border border-secondary rounded-4">
        <% if (p.logo) { %>
          <!-- ✅ Logo de la plataforma (ya viene de Platform.logoUrl) -->
          <img src="<%= p.logo %>" class="card-img-top rounded-top-4" alt="<%= p.nombre %>">
        <% } %>
        <div class="card-body">
          <span class="badge text-bg-danger mb-2"><%= p.etiqueta %></span>
          <h6 class="card-title"><%= p.nombre %></h6>
          <p class="card-text text-secondary">$<%= p.precio %> MXN</p>
        </div>
      </div>
    </div>
  <% }) %>
</div>
