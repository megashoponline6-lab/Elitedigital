  <div class="col-md-4" id="soporte">
    <div class="card bg-black border-secondary rounded-4">
      <div class="card-body">
        <h5>Soporte</h5>
        <form method="post" action="/ticket">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <textarea class="form-control mb-2" name="mensaje" rows="3" placeholder="Escribe tu mensaje"></textarea>
          <button class="btn btn-danger">Enviar</button>
        </form>

        <% if (tickets.length) { %>
          <hr>
          <h6>Mis tickets</h6>
          <ul class="list-unstyled small">
            <% tickets.forEach(t => { %>
              <li>#<%= t.id %> - 
                <span class="badge <%= t.estado==='abierto' ? 'text-bg-warning' : 'text-bg-secondary' %>">
                  <%= t.estado %>
                </span>
              </li>
            <% }) %>
          </ul>
        <% } %>
      </div>
    </div>
  </div>
</div>
