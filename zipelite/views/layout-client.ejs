<!-- ✅ layout-client.ejs — plantilla base para vistas del cliente -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title || 'Eliteflix' %></title>

  <!-- Bootstrap -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <!-- Estilos generales (puedes enlazar tu propio CSS si ya tienes uno) -->
  <style>
    body {
      background-color: #0d0d0d;
      color: #fff;
      font-family: 'Poppins', sans-serif;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    header, footer {
      background-color: #1a1a1a;
      border-bottom: 1px solid #333;
      padding: 10px 0;
    }

    a.nav-link {
      color: #fff !important;
      transition: color 0.2s;
    }

    a.nav-link:hover {
      color: #ff4444 !important;
    }

    footer {
      margin-top: auto;
      text-align: center;
      color: #777;
      padding: 20px;
    }
  </style>
</head>

<body>
  <!-- 🧭 HEADER -->
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark container">
      <a class="navbar-brand fw-bold" href="/">Eliteflix</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/">Inicio</a></li>
          <li class="nav-item"><a class="nav-link" href="/tienda">Tienda</a></li>
          <li class="nav-item"><a class="nav-link" href="/catalogo">Catálogo</a></li>
          <li class="nav-item"><a class="nav-link" href="/login">Iniciar sesión</a></li>
        </ul>
      </div>
    </nav>
  </header>

  <!-- 💡 CONTENIDO -->
  <main class="flex-grow-1">
    <div class="container py-4">
      <%- body %>
    </div>
  </main>

  <!-- ⚙️ FOOTER -->
  <footer>
    <p>© <%= new Date().getFullYear() %> Eliteflix - Todos los derechos reservados</p>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
