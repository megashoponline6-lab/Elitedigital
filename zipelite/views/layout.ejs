<!doctype html>
<html lang="es" data-bs-theme="dark">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>
    Eliteflix<%= (typeof title !== 'undefined' && title) ? ' - ' + title : '' %>
  </title>

  <!-- âœ… Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- âœ… Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

  <!-- âœ… Estilos personalizados -->
  <link href="/public/css/style.css" rel="stylesheet">
</head>

<body class="bg-dark text-light">

  <!-- ðŸ” Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-black border-bottom border-danger shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold text-danger" href="/">Ã‰liteflix</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="nav">
        <ul class="navbar-nav me-auto">
          <% if (sess && sess.user) { %>
            <li class="nav-item"><a class="nav-link" href="/catalogo">CatÃ¡logo</a></li>
          <% } %>
        </ul>
        <ul class="navbar-nav">
          <% if (sess && sess.user) { %>
            <li class="nav-item"><a class="nav-link" href="/panel">Mi Panel</a></li>
            <li class="nav-item"><a class="nav-link" href="/logout">Salir</a></li>
          <% } else { %>
            <li class="nav-item"><a class="nav-link" href="/login">Ingresar</a></li>
            <li class="nav-item"><a class="nav-link" href="/registro">Registro</a></li>
          <% } %>
          <li class="nav-item"><a class="nav-link" href="/admin">Admin</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- ðŸ’  Contenido principal -->
  <main class="container my-4">
    <%- body %>
  </main>

  <!-- âš¡ Footer -->
  <footer class="text-center text-secondary py-4 small border-top border-danger mt-4">
    Â© <%= new Date().getFullYear() %> Ã‰liteflix â€” Todos los derechos reservados
  </footer>

  <!-- âœ… Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <!-- ðŸ”” Sistema de alertas visuales -->
  <script>
    (function() {
      const params = new URLSearchParams(window.location.search);
      const ok = params.get('ok');
      const error = params.get('error');

      function showAlert(type, message, icon) {
        const alert = document.createElement('div');
        alert.className = \`alert alert-\${type} alert-dismissible fade show m-3 shadow-lg\`;
        alert.style.cssText = "z-index:9999; position:fixed; top:1rem; right:1rem; min-width:260px; animation: slideIn .4s ease;";
        alert.innerHTML = \`
          <i class="bi \${icon} me-2"></i>\${message}
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        \`;
        document.body.appendChild(alert);
      }

      if (ok) showAlert('success', ok, 'bi-check-circle-fill');
      if (error) showAlert('danger', error, 'bi-exclamation-triangle-fill');
    })();

    // AnimaciÃ³n suave para las alertas
    const style = document.createElement('style');
    style.innerHTML = `
      @keyframes slideIn {
        from { opacity: 0; transform: translateY(-10px); }
        to { opacity: 1; transform: translateY(0); }
      }
    `;
    document.head.appendChild(style);
  </script>

</body>
</html>
