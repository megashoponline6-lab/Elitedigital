<!doctype html>
<html lang="es" data-bs-theme="dark">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>
    Eliteflix<%= (typeof title !== 'undefined' && title) ? ' - ' + title : '' %>
  </title>

  <!-- ‚úÖ Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- ‚úÖ Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

  <!-- ‚úÖ Estilos personalizados -->
  <link href="/public/css/style.css" rel="stylesheet">

  <style>
    /* üîù Navbar mejorado */
    .navbar {
      position: sticky;
      top: 0;
      z-index: 1050;
      background: #000;
      backdrop-filter: blur(6px);
      transition: all 0.3s ease;
    }
    .navbar.scrolled {
      box-shadow: 0 2px 10px rgba(220, 53, 69, 0.3);
    }

    /* üßæ Footer */
    footer {
      border-top: 1px solid rgba(220,53,69,0.3);
      background: #0b0b0b;
    }

    /* ‚ú® Animaciones para alertas */
    @keyframes slideIn {
      from { opacity: 0; transform: translateY(-10px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .alert-float {
      position: fixed;
      top: 1rem;
      right: 1rem;
      z-index: 9999;
      min-width: 260px;
      animation: slideIn 0.4s ease;
    }

    /* üí¨ Hover en enlaces */
    .navbar-dark .navbar-nav .nav-link:hover {
      color: #dc3545 !important;
    }
  </style>
</head>

<body class="bg-dark text-light">

  <!-- üîù Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark border-bottom border-danger shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold text-danger" href="/">√âliteflix</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="nav">
        <ul class="navbar-nav me-auto">
          <% if (sess && sess.user) { %>
            <li class="nav-item"><a class="nav-link" href="/catalogo"><i class="bi bi-grid me-1"></i>Cat√°logo</a></li>
          <% } %>
        </ul>
        <ul class="navbar-nav">
          <% if (sess && sess.admin) { %>
            <li class="nav-item"><a class="nav-link" href="/admin/panel"><i class="bi bi-speedometer2 me-1"></i>Panel Admin</a></li>
            <li class="nav-item"><a class="nav-link" href="/admin/salir"><i class="bi bi-box-arrow-right me-1"></i>Salir</a></li>
          <% } else if (sess && sess.user) { %>
            <li class="nav-item"><a class="nav-link" href="/panel"><i class="bi bi-person-circle me-1"></i>Mi Panel</a></li>
            <li class="nav-item"><a class="nav-link" href="/logout"><i class="bi bi-door-closed me-1"></i>Salir</a></li>
          <% } else { %>
            <li class="nav-item"><a class="nav-link" href="/login"><i class="bi bi-box-arrow-in-right me-1"></i>Ingresar</a></li>
            <li class="nav-item"><a class="nav-link" href="/registro"><i class="bi bi-person-plus me-1"></i>Registro</a></li>
            <li class="nav-item"><a class="nav-link" href="/admin"><i class="bi bi-lock-fill me-1"></i>Admin</a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- üí† Contenido principal -->
  <main class="container my-4">
    <%- body %>
  </main>

  <!-- ‚ö° Footer -->
  <footer class="text-center text-secondary py-4 small mt-4">
    ¬© <%= new Date().getFullYear() %> √âliteflix ‚Äî Todos los derechos reservados
  </footer>

  <!-- ‚úÖ Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <!-- üîî Sistema de alertas visuales -->
  <script>
    (function() {
      const params = new URLSearchParams(window.location.search);
      const ok = params.get('ok');
      const error = params.get('error');

      function showAlert(type, message, icon) {
        const alert = document.createElement('div');
        alert.className = \`alert alert-\${type} alert-dismissible fade show alert-float shadow-lg border-0\`;
        alert.innerHTML = \`
          <i class="bi \${icon} me-2"></i>\${message}
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        \`;
        document.body.appendChild(alert);
        setTimeout(() => alert.remove(), 6000);
      }

      if (ok) showAlert('success', ok, 'bi-check-circle-fill');
      if (error) showAlert('danger', error, 'bi-exclamation-triangle-fill');
    })();

    // üß≠ Efecto scroll en navbar
    window.addEventListener('scroll', () => {
      const nav = document.querySelector('.navbar');
      if (window.scrollY > 20) nav.classList.add('scrolled');
      else nav.classList.remove('scrolled');
    });
  </script>

</body>
</html>
