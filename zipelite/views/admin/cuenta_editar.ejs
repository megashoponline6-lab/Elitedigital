<% var title = 'Editar cuenta'; %>

<div class="container my-5">
  <div class="card bg-dark border-secondary shadow-lg rounded-4 mx-auto" style="max-width: 600px;">
    <div class="card-body text-light">
      <h3 class="fw-bold text-warning mb-3">
        <i class="bi bi-pencil-square me-2"></i>Editar cuenta existente
      </h3>

      <% if (ok) { %>
        <div class="alert alert-success"><i class="bi bi-check-circle-fill me-1"></i><%= ok %></div>
      <% } %>
      <% if (error) { %>
        <div class="alert alert-danger"><i class="bi bi-exclamation-triangle-fill me-1"></i><%= error %></div>
      <% } %>

      <form method="post" autocomplete="off">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

        <div class="mb-3">
          <label class="form-label">Producto</label>
          <select name="product_id" class="form-select bg-dark text-light border-secondary" required>
            <% productos.forEach(p => { %>
              <option value="<%= p.id %>" <%= (p.id === cuenta.product_id) ? 'selected' : '' %>><%= p.nombre %></option>
            <% }) %>
          </select>
        </div>

        <div class="mb-3">
          <label class="form-label">Correo</label>
          <input name="correo" value="<%= cuenta.correo %>" class="form-control bg-dark text-light border-secondary" required>
        </div>

        <div class="mb-3">
          <label class="form-label">Contraseña</label>
          <input type="text" name="password" value="<%= cuenta.password %>" class="form-control bg-dark text-light border-secondary" required>
        </div>

        <div class="mb-3">
          <label class="form-label">Notas</label>
          <textarea name="notas" class="form-control bg-dark text-light border-secondary" rows="2"><%= cuenta.notas || '' %></textarea>
        </div>

        <div class="mb-3">
          <label class="form-label">Cupos</label>
          <input type="number" name="cupos" value="<%= cuenta.cupos %>" class="form-control bg-dark text-light border-secondary" min="1">
        </div>

        <div class="form-check form-switch mb-3">
          <input class="form-check-input" type="checkbox" name="activo" id="activo" value="1" <%= cuenta.activo ? 'checked' : '' %>>
          <label class="form-check-label" for="activo">Cuenta activa</label>
        </div>

        <button class="btn btn-warning w-100 py-2">
          <i class="bi bi-save2-fill me-1"></i>Guardar cambios
        </button>
      </form>

      <div class="text-center mt-3">
        <a href="/admin/panel" class="text-secondary small text-decoration-none">
          ← Volver al panel
        </a>
      </div>
    </div>
  </div>
</div>
