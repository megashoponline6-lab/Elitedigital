<% var title = 'Panel Admin'; %>

<style>
  body {
    background-color: #0e0e12;
    color: #e0e0e0;
  }

  h2, h3, h5 {
    color: #fff;
  }

  .btn-primary-custom {
    background: #ff003c;
    border: none;
    color: #fff;
    font-weight: 600;
    border-radius: 0.5rem;
    padding: 0.6rem 1.2rem;
    transition: transform 0.2s, box-shadow 0.3s;
    text-decoration: none;
  }

  .btn-primary-custom:hover {
    transform: scale(1.05);
    box-shadow: 0 0 10px rgba(255, 0, 60, 0.4);
  }

  .card {
    background: #1b1b22;
    border: 1px solid #2a2a33;
    border-radius: 0.75rem;
    color: #e0e0e0;
  }

  .stats-box {
    background: #181820;
    border-radius: 1rem;
    padding: 1.5rem;
    text-align: center;
  }

  .stats-box h4 {
    color: #00c8ff;
    font-size: 2rem;
  }

  .stats-box p {
    color: #aaa;
    margin-top: 0.5rem;
  }

  .table-dark th, .table-dark td {
    vertical-align: middle;
  }

  .badge {
    font-size: 0.9rem;
    padding: 0.35em 0.75em;
  }
</style>

<div class="container-fluid mt-3 text-light">
  <!-- 🔝 ENCABEZADO -->
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="fw-bold text-danger">👑 Panel de Administración</h2>
    <div>
      <a href="/admin/cambiar-password" class="btn btn-warning me-2">Cambiar contraseña</a>
      <a href="/admin/salir" class="btn btn-outline-light">Salir</a>
    </div>
  </div>

  <!-- 📊 Dashboard de Suscripciones -->
  <div class="text-end mb-3">
    <a href="/admin/suscripciones" class="btn-primary-custom">
      📊 Ver todas las suscripciones
    </a>
  </div>

  <!-- 🔔 ALERTAS -->
  <%- include('../partials/errors', { errores }) %>
  <% if (ok) { %>
    <div class="alert alert-success border-0 rounded-4 shadow-sm py-2 px-3 mb-3">
      <i class="bi bi-check-circle-fill me-2"></i>
      <%= ok %>
    </div>
  <% } %>
  <% if (error) { %>
    <div class="alert alert-danger border-0 rounded-4 shadow-sm py-2 px-3 mb-3">
      <i class="bi bi-exclamation-triangle-fill me-2"></i>
      <%= error %>
    </div>
  <% } %>

  <div class="row g-4 mt-1">

    <!-- 🧾 RESUMEN GENERAL -->
    <div class="col-lg-6">
      <div class="card shadow-sm p-3">
        <h5 class="mb-3">📊 Resumen General</h5>
        <div class="row text-center">
          <div class="col">
            <div class="h4"><%= stats?.totalUsuarios || 0 %></div>
            <div class="text-secondary small">Usuarios totales</div>
          </div>
          <div class="col">
            <div class="h4 text-success"><%= stats?.activos || 0 %></div>
            <div class="text-secondary small">Activos</div>
          </div>
          <div class="col">
            <div class="h4 text-danger"><%= stats?.inactivos || 0 %></div>
            <div class="text-secondary small">Inactivos</div>
          </div>
          <div class="col">
            <div class="h4 text-warning">$<%= stats?.totalSaldo || 0 %></div>
            <div class="text-secondary small">Saldo total</div>
          </div>
        </div>
      </div>
    </div>

    <!-- 💰 RECARGAR SALDO -->
    <div class="col-lg-6">
      <div class="card shadow-sm p-3">
        <h5 class="mb-3">💰 Recargar saldo</h5>
        <form class="row g-2" method="POST" action="/admin/recargar">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">

          <div class="col-md-4">
            <input
              class="form-control bg-dark text-light border-secondary"
              name="correo"
              type="email"
              placeholder="Correo del usuario"
              required
            >
          </div>

          <div class="col-md-3">
            <input
              class="form-control bg-dark text-light border-secondary"
              name="monto"
              type="number"
              min="1"
              placeholder="Monto"
              required
            >
          </div>

          <div class="col-md-3">
            <input
              class="form-control bg-dark text-light border-secondary"
              name="nota"
              placeholder="Nota (opcional)"
            >
          </div>

          <div class="col-md-2">
            <button class="btn btn-danger w-100">Cargar</button>
          </div>
        </form>
      </div>
    </div>

    <!-- 👥 USUARIOS -->
    <div class="col-lg-12">
      <div class="card shadow-sm p-3">
        <div class="d-flex justify-content-between align-items-center mb-2">
          <h5>👥 Usuarios registrados</h5>
          <button class="btn btn-sm btn-outline-light" type="button" id="toggleUsuarios">
            Mostrar todos
          </button>
        </div>

        <div id="usuariosContainer" style="max-height:250px; overflow-y:hidden; transition:all 0.3s ease;">
          <table class="table table-dark table-hover align-middle mb-0 table-sm">
            <thead>
              <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>País</th>
                <th>Saldo</th>
                <th>Última conexión</th>
                <th>Registro</th>
              </tr>
            </thead>
            <tbody>
              <% if (usuarios && usuarios.length > 0) { %>
                <% usuarios.forEach((u, index) => { %>
                  <tr class="<%= index >= 5 ? 'extra-usuario d-none' : '' %>">
                    <td><%= index + 1 %></td>
                    <td><%= u.nombre %> <%= u.apellido %></td>
                    <td><%= u.correo %></td>
                    <td><%= u.pais || '-' %></td>
                    <td>$<%= u.saldo || 0 %></td>
                    <td>
                      <% if (u.last_login) { %>
                        <%= dayjs(u.last_login).format('DD/MM/YYYY HH:mm') %>
                      <% } else { %>
                        <span class="text-secondary">Nunca</span>
                      <% } %>
                    </td>
                    <td><%= dayjs(u.created_at).format('DD/MM/YYYY') %></td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="7" class="text-center text-secondary py-3">
                    Sin usuarios registrados
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- 🎬 GESTIÓN DE PLATAFORMAS -->
    <div class="col-lg-6">
      <div class="card shadow-sm p-3 d-flex justify-content-between align-items-center flex-row">
        <div>
          <h5 class="mb-1">🎬 Plataformas de Streaming</h5>
          <p class="text-secondary mb-1">Administra las plataformas disponibles.</p>
          <span class="badge bg-primary fs-6 mt-1">
            <%= stats?.totalPlatforms || 0 %> plataformas
          </span>
        </div>
        <a href="/admin/plataformas" class="btn btn-primary btn-lg px-4">
          Ir a plataformas
        </a>
      </div>
    </div>

    <!-- 📋 GESTIÓN DE CUENTAS -->
    <div class="col-lg-6">
      <div class="card shadow-sm p-3 d-flex justify-content-between align-items-center flex-row">
        <div>
          <h5 class="mb-1">📋 Gestión de Cuentas</h5>
          <p class="text-secondary mb-1">Administra correos, contraseñas y cupos.</p>
          <span class="badge bg-danger fs-6 mt-1">
            <%= stats?.totalAccounts || 0 %> cuentas
          </span>
        </div>
        <a href="/admin/cuentas" class="btn btn-danger btn-lg px-4">
          Ir a cuentas
        </a>
      </div>
    </div>

  </div>
</div>

<script>
  // 👥 Mostrar/ocultar usuarios extra
  const btnToggle = document.getElementById('toggleUsuarios');
  const container = document.getElementById('usuariosContainer');
  const extras = document.querySelectorAll('.extra-usuario');
  let abierto = false;

  btnToggle.addEventListener('click', () => {
    abierto = !abierto;
    extras.forEach(row => row.classList.toggle('d-none', !abierto));
    container.style.maxHeight = abierto ? '600px' : '250px';
    container.style.overflowY = abierto ? 'auto' : 'hidden';
    btnToggle.textContent = abierto ? 'Ocultar' : 'Mostrar todos';
    if (!abierto) container.scrollTo({ top: 0, behavior: 'smooth' });
  });
</script>
