<% var title = 'Panel Admin'; %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>Panel de Administración</h2>
  <div>
    <a href="/admin/cambiar-password" class="btn btn-warning me-2">Cambiar contraseña</a>
    <a href="/admin/salir" class="btn btn-outline-light">Salir</a>
  </div>
</div>

<div class="row g-4 mt-1">

  <!-- 🧾 RESUMEN GENERAL -->
  <div class="col-lg-6">
    <div class="card bg-black border-secondary rounded-4 shadow">
      <div class="card-body">
        <h5 class="mb-3">Resumen General</h5>
        <div class="row text-center">
          <div class="col">
            <div class="h4"><%= stats?.totalUsuarios || 0 %></div>
            <div class="text-secondary small">Usuarios totales</div>
          </div>
          <div class="col">
            <div class="h4 text-success"><%= stats?.activos || 0 %></div>
            <div class="text-secondary small">Activos</div>
          </div>
          <div class="col">
            <div class="h4 text-danger"><%= stats?.inactivos || 0 %></div>
            <div class="text-secondary small">Inactivos</div>
          </div>
          <div class="col">
            <div class="h4">$<%= stats?.totalSaldo || 0 %></div>
            <div class="text-secondary small">Saldo total</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 💰 RECARGAR SALDO -->
  <div class="col-lg-6">
    <div class="card bg-black border-secondary rounded-4 shadow">
      <div class="card-body">
        <h5 class="mb-3">Recargar saldo</h5>
        <form class="row g-2" method="POST" action="/admin/recargar">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="col-md-4">
            <input class="form-control" name="correo" type="email" placeholder="Correo del usuario" required>
          </div>
          <div class="col-md-3">
            <input class="form-control" name="monto" type="number" min="1" placeholder="Monto" required>
          </div>
          <div class="col-md-3">
            <input class="form-control" name="nota" placeholder="Nota (opcional)">
          </div>
          <div class="col-md-2">
            <button class="btn btn-danger w-100">Cargar</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- 👥 USUARIOS -->
  <div class="col-lg-12">
    <div class="card bg-black border-secondary rounded-4 shadow">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-2">
          <h5>Usuarios registrados (MongoDB)</h5>
          <button class="btn btn-sm btn-outline-light" type="button" id="toggleUsuarios">Mostrar todos</button>
        </div>

        <div id="usuariosContainer" style="max-height:250px; overflow-y:hidden; transition:all 0.3s ease;">
          <table class="table table-dark table-sm align-middle mb-0">
            <thead>
              <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>País</th>
                <th>Saldo</th>
                <th>Última conexión</th>
                <th>Registro</th>
              </tr>
            </thead>
            <tbody>
              <% if (usuarios && usuarios.length > 0) { %>
                <% usuarios.forEach((u, index) => { %>
                  <tr class="<%= index >= 5 ? 'extra-usuario d-none' : '' %>">
                    <td><%= index + 1 %></td>
                    <td><%= u.nombre %> <%= u.apellido %></td>
                    <td><%= u.correo %></td>
                    <td><%= u.pais || '-' %></td>
                    <td>$<%= u.saldo || 0 %></td>
                    <td>
                      <% if (u.last_login) { %>
                        <%= dayjs(u.last_login).format('DD/MM/YYYY HH:mm') %>
                      <% } else { %>
                        <span class="text-secondary">Nunca</span>
                      <% } %>
                    </td>
                    <td><%= dayjs(u.created_at).format('DD/MM/YYYY') %></td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr><td colspan="7" class="text-center text-secondary">Sin usuarios registrados</td></tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- 🎬 GESTIÓN DE PLATAFORMAS -->
  <div class="col-lg-6">
    <div class="card bg-black border-secondary rounded-4 shadow">
      <div class="card-body d-flex justify-content-between align-items-center">
        <div>
          <h5 class="mb-1">🎬 Plataformas de Streaming</h5>
          <p class="text-secondary mb-1">Administra las plataformas disponibles para las cuentas.</p>
          <span class="badge bg-primary fs-6 mt-1">
            <%= stats && stats.totalPlatforms ? stats.totalPlatforms : 0 %> plataformas registradas
          </span>
        </div>
        <a href="/admin/plataformas" class="btn btn-primary btn-lg px-4">
          Ir a plataformas
        </a>
      </div>
    </div>
  </div>

  <!-- 📋 GESTIÓN DE CUENTAS -->
  <div class="col-lg-6">
    <div class="card bg-black border-secondary rounded-4 shadow">
      <div class="card-body d-flex justify-content-between align-items-center">
        <div>
          <h5 class="mb-1">📋 Gestión de Cuentas</h5>
          <p class="text-secondary mb-1">Administra correos, contraseñas y cupos por plataforma.</p>
          <span class="badge bg-danger fs-6 mt-1">
            <%= stats && stats.totalAccounts ? stats.totalAccounts : 0 %> cuentas registradas
          </span>
        </div>
        <a href="/admin/cuentas" class="btn btn-danger btn-lg px-4">
          Ir a cuentas
        </a>
      </div>
    </div>
  </div>

</div>

<script>
  const btnToggle = document.getElementById('toggleUsuarios');
  const container = document.getElementById('usuariosContainer');
  const extras = document.querySelectorAll('.extra-usuario');
  let abierto = false;

  btnToggle.addEventListener('click', () => {
    abierto = !abierto;
    extras.forEach(row => row.classList.toggle('d-none', !abierto));
    container.style.maxHeight = abierto ? '600px' : '250px';
    container.style.overflowY = abierto ? 'auto' : 'hidden';
    btnToggle.textContent = abierto ? 'Ocultar' : 'Mostrar todos';
    if (!abierto) container.scrollTo({ top: 0, behavior: 'smooth' });
  });
</script>
