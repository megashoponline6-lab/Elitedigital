<% var title = 'Login Administrador'; %>

<div class="container mt-5 text-light" style="max-width: 500px;">
  <div class="card bg-dark border-secondary shadow-lg">
    <div class="card-header text-center border-secondary">
      <h3 class="fw-bold text-danger mb-0">👑 Acceso Administrador</h3>
    </div>

    <div class="card-body">
      <!-- ✅ Mostrar errores -->
      <%- include('../partials/errors', { errores }) %>

      <!-- ✅ Mostrar mensaje de éxito (por query ok) -->
      <% if (typeof ok !== 'undefined' && ok) { %>
        <div class="alert alert-success border-0 rounded-4 shadow-sm py-2 px-3 mb-3">
          <i class="bi bi-check-circle-fill me-2"></i>
          <%= ok %>
        </div>
      <% } %>

      <!-- ✅ Formulario de login -->
      <form method="POST" action="/admin">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

        <div class="mb-3">
          <label class="form-label">Usuario (correo)</label>
          <input
            name="usuario"
            type="email"
            class="form-control bg-dark text-light border-secondary"
            placeholder="admin@ejemplo.com"
            required
          >
        </div>

        <div class="mb-3">
          <label class="form-label">Contraseña</label>
          <input
            type="password"
            name="password"
            class="form-control bg-dark text-light border-secondary"
            placeholder="********"
            required
          >
        </div>

        <button class="btn btn-danger w-100 mt-2 py-2 fw-bold">
          Ingresar
        </button>
      </form>
    </div>

    <div class="card-footer text-center text-secondary small">
      <a href="/" class="text-decoration-none text-secondary">← Volver al inicio</a>
    </div>
  </div>
</div>
