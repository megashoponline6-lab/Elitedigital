<% var title = 'Administrador'; %>

<h2 class="fw-bold text-danger mb-3">
  <i class="bi bi-shield-lock-fill me-2"></i>Acceso de Administrador
</h2>

<% if (errores && errores.length) { %>
  <div class="alert alert-danger border border-danger-subtle rounded-4 shadow-sm">
    <i class="bi bi-exclamation-triangle-fill me-2"></i>
    Se encontraron los siguientes errores:
    <ul class="mt-2 mb-0 small">
      <% errores.forEach(e => { %><li><%= e.msg %></li><% }) %>
    </ul>
  </div>
<% } %>

<div class="card bg-black border border-secondary rounded-4 shadow-lg p-4 mt-3 mx-auto" style="max-width: 450px;">
  <form method="post" autocomplete="off">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <div class="mb-3">
      <label class="form-label text-light"><i class="bi bi-person-fill me-1"></i>Usuario</label>
      <input name="usuario" class="form-control bg-dark text-light border-secondary" placeholder="Correo o usuario" required>
    </div>
    <div class="mb-3">
      <label class="form-label text-light"><i class="bi bi-key-fill me-1"></i>Contraseña</label>
      <input type="password" name="password" class="form-control bg-dark text-light border-secondary" placeholder="********" required>
    </div>
    <button class="btn btn-danger w-100 mt-2 py-2">
      <i class="bi bi-box-arrow-in-right me-1"></i>Iniciar sesión
    </button>
  </form>
</div>

<p class="text-secondary small mt-4 text-center">
  ¿Primera vez? Configura tu cuenta en  
  <a href="/admin/setup" class="text-danger text-decoration-none fw-semibold">/admin/setup</a>.
</p>
