<% layout = 'layout' %>
<% var title = 'Nuevo producto'; %>

<section class="container">
  <h2 class="mb-4 text-danger fw-bold">Agregar producto</h2>

  <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>
  <% if (typeof ok !== 'undefined' && ok) { %>
    <div class="alert alert-success"><%= ok %></div>
  <% } %>

  <form class="card p-3 bg-black border border-secondary rounded-4" method="post" action="/admin/producto/nuevo" enctype="multipart/form-data">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

    <div class="row g-3">
      <div class="col-md-6">
        <label class="form-label">Nombre *</label>
        <input name="nombre" class="form-control" required>
      </div>

      <div class="col-md-6">
        <label class="form-label">Imagen (logo)</label>
        <input type="file" name="logo" accept="image/*" class="form-control">
        <small class="text-secondary">Se guardará en /public/uploads</small>
      </div>

      <div class="col-12">
        <label class="form-label">Descripción</label>
        <textarea name="descripcion" class="form-control" rows="3" placeholder="Detalle breve visible en el catálogo"></textarea>
      </div>

      <div class="col-md-4">
        <label class="form-label">Precio 1 mes *</label>
        <input type="number" name="precio1" class="form-control" min="0" step="1" required>
      </div>
      <div class="col-md-4">
        <label class="form-label">Precio 2 meses</label>
        <input type="number" name="precio2" class="form-control" min="0" step="1">
      </div>
      <div class="col-md-4">
        <label class="form-label">Precio 3 meses</label>
        <input type="number" name="precio3" class="form-control" min="0" step="1">
      </div>

      <div class="col-md-4">
        <label class="form-label">Cupos totales</label>
        <input type="number" name="cupos_total" class="form-control" min="0" step="1" value="0">
        <small class="text-secondary">Cupos disponibles = totales - usados</small>
      </div>
    </div>

    <div class="mt-3 d-flex gap-2">
      <button class="btn btn-danger">Guardar</button>
      <a class="btn btn-outline-light" href="/admin/panel">Cancelar</a>
    </div>
  </form>
</section>
