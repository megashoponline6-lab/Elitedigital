<% layout = 'layout' %>
<% var title = plataforma.name + ' | Planes'; %>

<style>
  body {
    background: linear-gradient(135deg, #0a0a0f 40%, #120028);
    color: #e0e0e0;
  }
  h2 {
    color: #fff;
    text-shadow: 0 0 10px #ff003c, 0 0 20px #ff003c;
  }
  .plan-card {
    background: rgba(25,25,35,0.8);
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 1rem;
    text-align: center;
    padding: 1.5rem;
    transition: transform .3s, box-shadow .3s;
  }
  .plan-card:hover {
    transform: scale(1.03);
    box-shadow: 0 0 25px rgba(255,0,100,0.4);
  }
  .btn-adquirir {
    background: linear-gradient(90deg,#ff003c,#ff6a00);
    border: none;
    color: #fff;
    font-weight: 600;
    transition: box-shadow .3s, transform .2s;
  }
  .btn-adquirir:hover {
    transform: scale(1.05);
    box-shadow: 0 0 20px #ff003c, 0 0 30px #ff6a00;
  }
 <style>
  .platform-logo {
    display: block;
    width: 100%;
    max-width: 320px; /* ðŸ”¹ lÃ­mite razonable en pantallas grandes */
    height: auto;
    max-height: 180px;
    margin: 0 auto 1.5rem auto;
    padding: 10px;
    background-color: #000; /* ðŸ”¹ fondo oscuro detrÃ¡s de logos con transparencia */
    border-radius: 1rem;
    object-fit: contain; /* ðŸ”¹ muestra todo el logo completo sin recorte */
    object-position: center;
    box-shadow: 0 0 20px rgba(255, 0, 60, 0.3);
  }
</style>


<div class="container text-center mt-5">
  <% 
    // âœ… DetecciÃ³n robusta del logo (corrige rutas duplicadas y antiguas)
    let logoPath = '/img/default.png'; // fallback

    if (plataforma.logoUrl) {
      let url = plataforma.logoUrl.trim();

      if (url.includes('img/plataformas/')) {
        logoPath = url.startsWith('/') ? url : '/' + url;
      } else if (url.includes('/plataforma/img/')) {
        logoPath = url.replace('/plataforma', '');
      } else if (url.includes('uploads')) {
        logoPath = url.startsWith('/') ? url : '/' + url;
      } else {
        logoPath = '/img/plataformas/' + url;
      }
    } else if (plataforma.logo && plataforma.logo.includes('uploads')) {
      logoPath = '/' + plataforma.logo;
    } else if (plataforma.logo) {
      logoPath = '/img/plataformas/' + plataforma.logo;
    }
  %>

  <img src="<%= logoPath %>" alt="<%= plataforma.name %>" class="platform-logo shadow-lg">
  <h2 class="fw-bold mb-4">Planes para <%= plataforma.name %></h2>

  <div class="row g-3 justify-content-center">
    <% precios.forEach(p => { %>
      <div class="col-6 col-md-4 col-lg-3">
        <div class="plan-card">
          <h5><%= p.meses %> mes<%= p.meses > 1 ? 'es' : '' %></h5>
          <p class="fs-5 text-info mb-3">$<%= p.precio %> MXN</p>
          <button class="btn btn-adquirir w-100"
            data-bs-toggle="modal"
            data-bs-target="#confirmModal"
            data-id="<%= plataforma._id %>"
            data-meses="<%= p.meses %>"
            data-precio="<%= p.precio %>"
            data-nombre="<%= plataforma.name %>">
            Adquirir
          </button>
        </div>
      </div>
    <% }) %>
  </div>

  <a href="/panel" class="btn btn-outline-light mt-4">â¬… Volver al panel</a>
</div>

<!-- ðŸ”® Modal de confirmaciÃ³n -->
<form id="adquirirForm" method="POST" action="">
  <% if (typeof csrfToken !== 'undefined') { %>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <% } %>

  <div class="modal fade" id="confirmModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Confirmar adquisiciÃ³n</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body text-center">
          <p id="modalText" class="fs-5"></p>
          <input type="hidden" name="meses" id="inputMeses">
          <input type="hidden" name="precio" id="inputPrecio">
        </div>
        <div class="modal-footer justify-content-center">
          <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Cancelar</button>
          <button type="submit" class="btn btn-adquirir">Confirmar</button>
        </div>
      </div>
    </div>
  </div>
</form>

<script>
  const modal = document.getElementById('confirmModal');
  const form = document.getElementById('adquirirForm');

  modal.addEventListener('show.bs.modal', event => {
    const btn = event.relatedTarget;
    const meses = btn.getAttribute('data-meses');
    const precio = btn.getAttribute('data-precio');
    const nombre = btn.getAttribute('data-nombre');
    const id = btn.getAttribute('data-id');
    
    document.getElementById('modalText').innerHTML = 
      `Â¿Deseas adquirir el plan de ${meses} mes${meses>1?'es':''} de <strong>${nombre}</strong> por <span class='text-info'>$${precio} MXN</span>?`;
    
    document.getElementById('inputMeses').value = meses;
    document.getElementById('inputPrecio').value = precio;
    form.action = `/plataforma/${id}/adquirir`; // âœ… ruta exacta
  });
</script>
